    </dependency>
  </dependencies>
  <properties>
    <jupiter.version>5.3.0</jupiter.version>
    <java.version>11</java.version>
    <adrestus.version>2.0-SNAPSHOT</adrestus.version>
    <junittest.version>4.13.2</junittest.version>
    <surefire.version>1.3.2</surefire.version>
    <vintage.version>5.8.2</vintage.version>
    <appdirs.version>1.2.1</appdirs.version>
  </properties>
</project>
